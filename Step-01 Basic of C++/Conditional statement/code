#include<iostream>
using namespace std;

int main(){
    cout<<"hello";
    // conditional statement 
      int a; 
    cin>>a; 
    if(a>18){ 
        cout<<"you are adult"; 
    }else{ 
        cout<<"you are not adult"; 
    } 

    // else if statement 
    int marks; 
    cin>>marks; 
    if(marks>300){ 
       cout<<"first division"; 
    }else if(marks>200 && marks<300){ 
       cout<<"second division"; 
    }else if(marks>100 && marks<200){ 
       cout<<"third division"; 
    }else{ 
       cout<<"fail"; 
    } 

// find chracter lowercase or uppercase
       char ch; 
    cin>>ch; 
    if(ch>='a' && ch<='z'){ 
        cout<<"lowercase"; 
    }else{ 
        cout<<"uppercase"; 
    } 

//Ternary oprator statement 
     char ch; 
      cin>>ch; 
       cout<<(ch>='a' && ch<='z' ?  "lowercase": "uppercase") <<endl; 

//while loop
 //print number 1 to 5
  int count = 1;
 while(count<=5){
    cout<<count;
    count++; 
 }

 //for loop
 //print number 1 to 5 using for loop
 int n = 5;
 int count = 1;
 for(int i=0; i<n; i++){
  cout<<count<<" ";
  count++;
 }

// same question using do while loop
 int count = 1;
 do{
  cout<<count;
  count++;
 }while(count<=5);

//Nested loop
 int n = 5;
 for(int i=0; i<n; i++){
  for(int j=0; j<n; j++){
    cout<<" * ";
  }
  cout<<endl;
 }
    return 0;
}
