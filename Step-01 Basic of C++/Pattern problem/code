#include <iostream>
using namespace std;

int main(){
 // square pattern
//print the pattern
    1234
    1234
    1234
    1234

 int n = 4;
 for(int i=0; i<n; i++){
  for(int j=1; j<=n; j++){
    cout<<j<<" ";
  }
  cout<<endl;
 }

Print this patterns 
123 
456 
789 

 int n = 3; 
  int num = 1; 
   for(int i=0; i<n; i++){   
     for(int j=0; j<n; j++){ 
        cout<<num; 
        num++; 
     } 
     cout<<endl; 
   } 

//print the pattern
 * 
 *  *
